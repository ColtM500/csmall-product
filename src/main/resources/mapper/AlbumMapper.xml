<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.chen.csmall.product.mapper.AlbumMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO pms_album (
           name, description, sort
        ) VALUES (
                     #{name}, #{description}, #{sort}
                 )
    </insert>

    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO pms_album (
           name, description, sort, gmt_create, gmt_modified
           ) VALUES
           <foreach collection="list" item="album" separator=",">
               (
                  #{album.name},#{album.description},#{album.sort},
                  #{album.gmtCreate},#{album.gmtModified}
               )
           </foreach>
    </insert>

    <delete id="deleteById">
        DELETE FROM pms_album WHERE id=#{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM pms_album WHERE id IN (
            <foreach collection="array" item="id" separator=",">
                #{id}
            </foreach>
            )
    </delete>

    <update id="update">
        UPDATE
            pms_album
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
        </set>
        WHERE
             id = #{id}
    </update>

    <select id="count" resultType="int">
        SELECT count(*) FROM pms_album;
    </select>

    <select id="getStandardById" resultMap="StandardResultMap">
        SELECT
          <include refid="StandardQueryFields"/>
        FROM
            pms_album
        WHERE
            id = #{id}
    </select>

    <sql id="StandardQueryFields">
        <if test="true">
            id, name, description, sort
        </if>
    </sql>

    <resultMap id="StandardResultMap"
               type="cn.chen.csmall.product.pojo.vo.AlbumStandardVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="sort" property="sort"/>
    </resultMap>

<!--    List<AlbumListItemVO> list();-->
    <select id="list" resultMap="ListResultMap">
        SELECT
            <include refid="ListQueryFields"/>
        FROM
            pms_album
        ORDER BY
            sort DESC, id DESC
    </select>

    <sql id="ListQueryFields">
        <if test="true">
        id, name, description, sort
        </if>
    </sql>
    
    <resultMap id="ListResultMap" type="cn.chen.csmall.product.pojo.vo.AlbumListItemVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="sort" property="sort"/>
    </resultMap>
</mapper>
